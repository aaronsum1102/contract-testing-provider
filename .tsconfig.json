{
  "compilerOptions": {
    "target": "ES2019",
    "module": "CommonJS",
    "moduleResolution": "node",
    "lib": ["ES2019"],
    "allowJs": true,
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": "./",
    "resolveJsonModule": true,
    "include": ["src/**/*"],
    "exclude": ["node_modules/**", "**/*.spec.ts"]
  }
}
